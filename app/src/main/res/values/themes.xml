<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokedex" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dexBackground</item>
        <!-- Colour of the status bar -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorHighlight">@color/highlight</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Theme.Pokedex_Red" parent="Base.Theme.Pokedex">
        <item name="colorPrimary">@color/dexBackground_red</item>
    </style>
</resources>